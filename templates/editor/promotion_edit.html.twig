{% extends 'base.html.twig' %}

{% block title %}Modification d'une promotion{% endblock %}

{% block body %}


{% if app.user %}

{# structure de la page 10 colonnes de largeur et alignée à droite #}
<div class="container-fluid ">
    <div class="row">
        <div class="col-xl-10 col-lg-9 col-md-8 ml-auto my-5">


            <div class="container col-12 col-md-8 mt-5" style="font-family: 'Amiri', serif;">
                <h4 >Modification d'une promotion</h4>
                {{ form_start(form) }}
                {{ form_row(form.Annee,{attr:{'class':'form-control mb-3 ','min':2017}}) }}
                {{ form_row(form.DateDebut,{attr:{'class':'form-control mb-3 '}}) }}
                {{ form_row(form.DateFin,{attr:{'class':'form-control mb-3'}}) }}
                {{ form_row(form.NombreEleves,{attr:{'class':'form-control mb-3','min':1}}) }}
                {{ form_row(form.Commentaires,{attr:{'class':'form-control mb-3'}}) }}
                {{ form_row(form.Formation,{attr:{'class':'form-control mb-3','required':'true'}}) }}
                
                
                <button class="btn btn-outline-danger d-block ml-auto">Enregistrer</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}